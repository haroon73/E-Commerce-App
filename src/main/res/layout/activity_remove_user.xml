<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RemoveUser">


    <TextView
        android:id="@+id/textView"
        android:layout_width="355dp"
        android:layout_height="58dp"
        android:layout_marginTop="60dp"
        android:text="Remove user from Spice App"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorDarkRed"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/RemoveUserName"
        android:layout_width="170dp"
        android:layout_height="49dp"
        android:layout_marginTop="136dp"
        android:hint="User name"
        android:textAlignment="center"
        android:textColorHint="@color/colorDarkRed"
        android:textColor="@color/colorDarkRed"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/RemoveUserByAdminbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Remove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RemoveUserName" />

    <Button
        android:id="@+id/backtoAdminbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RemoveUserByAdminbtn1" />
</androidx.constraintlayout.widget.ConstraintLayout>